# define the gem repository, REF: https://bundler.io/man/gemfile.5.html#GLOBAL-SOURCE
source "https://rubygems.org"

# define the ruby version for the app, REF: https://bundler.io/man/gemfile.5.html#GLOBAL-SOURCE
ruby "2.7.6"

# define the jekyll version to install, this is the min. requirement to run GH Pages w/ Jekyll
gem "jekyll", "~> 3.9.0"

# define & group the additional packages that support GH pages & Jekyll, REF: https://bundler.io/man/gemfile.5.html#GROUPS
gem 'github-pages', group: :jekyll_plugins
gem "jekyll-github-metadata"
gem 'jekyll-email-protect'
gem "jekyll-octicons"
gem "jemoji"
